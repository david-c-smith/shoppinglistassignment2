<head>
  <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js' %>
  <%= javascript_include_tag 'https://code.jquery.com/ui/1.12.1/jquery-ui.js' %>
  <%= javascript_include_tag 'http://code.jquery.com/ui/1.9.2/jquery-ui.js' %>
  <script>
      $( function() {
          $( "#todo_list" ).sortable();
          $( "#todo_list" ).disableSelection();
      } );
  </script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <style>
    #todo_list { list-style-type: none; margin: 0; padding: 0; width: 60%; }
    #todo_list li { margin: 0 3px 3px 3px; padding: 0.4em; padding-left: 1.5em; font-size: 1.4em; height: 18px; }
    #todo_list li span { position: absolute; margin-left: -1.3em; }
  </style>
</head>

<h1 style="text-align:center;color:white;">Grocery List Maker (Now with click and drag sorting)</h1>
<ul id="todo_list" style="margin-left: 110px;margin-top: 30px">

<% @todo_lists.each do |todo_list| %>
  <div class="index_row clearfix">
    <h2 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h2>
    <p class="todo_list_sub_title"><%= todo_list.description %></p>
  </div>
<% end %>
</ul>

<div class="links">
  <%= link_to "New grocery list", new_todo_list_path, class: "btn btn-success btn-lg"%>
</div>

